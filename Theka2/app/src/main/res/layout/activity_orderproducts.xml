<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Orderproducts">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipping Details:"
            android:textColor="#ffffff"
            android:textSize="28dp"
            android:background="#7b0001"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/cmname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading name"
            android:textSize="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#ff5722"
android:textStyle="bold"

            />
            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/cmcontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading contact"
                android:textSize="22dp"
                android:textColor="#ff5722"
                android:textStyle="bold"


                />
            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/cmaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading address"
                android:textSize="20dp"
                android:textColor="#ff5722"
android:textStyle="italic"

                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
<androidx.recyclerview.widget.RecyclerView
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/productrecyclerview"
    android:layout_weight="100"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total price="
        android:id="@+id/productamount"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:background="#7b0001"
        android:textColor="#ffffff"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_action"
        android:backgroundTint="#FB0707"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:text="Cencel"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/delete"
        android:backgroundTint="#FB0707"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:text="Delete"/>
</LinearLayout>