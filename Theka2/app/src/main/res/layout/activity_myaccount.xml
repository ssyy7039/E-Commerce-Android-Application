<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Myaccount"
    android:orientation="vertical"
    android:id="@+id/myaccountsnackbar">
    <ImageView
        android:layout_width="358dp"
        android:layout_height="205dp"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_gravity="center"
        android:layout_weight="25"/>

    <TextView
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:textSize="24sp"
        android:text="Loading Name....."
        android:textColor="#ff5722"
        android:textColorHint="#ff5722"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"

        />
    <TextView
        android:id="@+id/Contact1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text="Loading ContactNo....."
        android:textSize="24sp"
        android:textColor="#ff5722"
        android:textColorHint="#ff5722"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text="Loading Email....."
         android:textSize="24sp"
        android:textColor="#ff5722"
        android:textColorHint="#ff5722"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading Contact....."
        android:layout_weight="10"
        android:textColor="#ff5722"
        android:textColorHint="#ff5722"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:textSize="24dp"
        android:text="Loading address....."
        android:textColor="#ff5722"
        android:textColorHint="#ff5722"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:text="Edit"
        android:textSize="20sp"
        android:layout_weight="0"
         android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#7b0001"
        android:textColor="#ffffff"
        android:layout_marginBottom="5dp"
        />
</LinearLayout>