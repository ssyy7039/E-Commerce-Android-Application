<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:orientation="vertical"
    android:id="@+id/profilesnackbar">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/Appinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_info_black_24dp"
        android:layout_gravity="left"
        android:layout_weight="50"
        android:layout_marginRight="130dp"
        android:background="@drawable/flag_transparent"
        />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/flag_transparent"
        android:layout_weight="50"
        android:layout_marginLeft="130dp"
        android:foregroundGravity="right"
android:id="@+id/logout"
        android:src="@drawable/ic_power_settings_new_black_24dp" />
</LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:id="@+id/profilefloat"
        android:layout_marginTop="50dp"
        android:backgroundTint="#ffffff"
        android:src="@drawable/edit"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/contact_edittext"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_edittext">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="70"

                    android:src="@drawable/ic_account_circle_black_24dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                  android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profilename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading Name.."
                        android:textColor="#ff5722"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/profilecontact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading Contact No.."
                        android:textColor="#ff5722"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/profileemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading Email.."
                        android:textColor="#ff5722"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/profileaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading Address.."
                        android:textColor="#000000"
                        android:textSize="20dp" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Orders"
        android:background="@drawable/contact_edittext"
        android:textColor="#ffffff"
        android:backgroundTint="#7b0001"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="20"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/details"/>

<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:src="@drawable/kick"/>

</LinearLayout>