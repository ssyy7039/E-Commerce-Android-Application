<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat"
    android:orientation="vertical"
    android:id="@+id/chatsnakbar"
    >
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Give your Feedback"
        android:textColor="#7b0001"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_weight="10"
       />

    <EditText
        android:id="@+id/Chatt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="center"
        android:layout_weight="15"
        android:hint="Give feedback OR a ask Questions?\n\n\n"
        android:inputType="textMultiLine"
       android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#7b0001"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_weight="0"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Chatt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="10"
        android:text="Contact with us:"
        android:textColor="#7b0001"
        android:textSize="30dp"
        android:textStyle="bold|italic" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_weight="10">

        <Button
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/contact_edittext"
            android:backgroundTint="#7b0001"
            android:text="kicktheli6@gmail.com"
            android:textColor="#ffffff"
            android:layout_weight="00"/>

    </LinearLayout>



</LinearLayout>