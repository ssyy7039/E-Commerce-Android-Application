<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_marginBottom="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/ordercard"
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#577B0001">

            <TextView
                android:id="@+id/cardtime"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="right"
                android:text="Time"
                android:textColor="#ff5722"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="left"
                    android:text="Order id::"
                    android:textColor="#7b0001"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/cardorderid"
                    android:layout_width="260dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="Order id"
                    android:textColor="#ff5722"
                    android:textSize="20sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/cardstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Status"
                android:layout_gravity="center"
                android:textColor="#F10303"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cardshopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Shop name"
                android:textColor="#7b0001"
                android:textSize="22sp"
                android:textStyle="bold" />

           <Button
               android:id="@+id/orderproduct"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Show product details"
               android:layout_marginLeft="25dp"
               android:layout_marginRight="25dp"
               android:layout_weight="10"
               android:textColor="#ffffff"
               android:backgroundTint="#7b0001"
               android:layout_gravity="center"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>