<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signin"
    android:orientation="vertical"
    android:layout_weight="15"
    android:id="@+id/snackbarr">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/theka3"
        android:layout_weight="30"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Sir,"
        android:textColor="#7b0001"
        android:textSize="30dp"
        android:layout_weight="2"
        android:textStyle="bold"
       />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:layout_weight="2"
        android:textColor="#7b0001"
        android:textSize="30dp"
       />
    <EditText
        android:id="@+id/editText8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter EmailId"
        android:inputType="textPersonName"
        android:textColor="#ff5722"
        android:textColorHint="#FF5722"
        android:layout_weight="10"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:id="@+id/editText9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="#ff5722"
android:layout_weight="10"
        android:textColorHint="#FF5722"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

     />

    <TextView
        android:id="@+id/forgotid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Forgot Password?"
        android:textColor="#FF5722"
        android:textSize="18dp"
android:layout_weight="5"
        android:layout_marginTop="2dp"
     />
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#7b0001"
        android:text="SignIn"
        android:textColor="#Fff"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="00"

       />
    <Button
        android:id="@+id/register1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#7b0001"
        android:text="New user?Click to register"
        android:textColor="#Fff"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:layout_weight="0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
      />


    </LinearLayout>

